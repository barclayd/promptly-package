{
  "name": "@promptly/prompts",
  "version": "0.1.0",
  "description": "TypeScript SDK for Promptly CMS â€” fetch prompts, build Zod schemas, generate typed code",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.mjs",
      "require": "./dist/schema.cjs"
    }
  },
  "bin": {
    "promptly": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "check": "bun run types && bun run lint && bun run test",
    "types": "tsgo --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "citty": "^0.2.1",
    "jiti": "^2.6.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20260214.1",
    "ai": "^4.0",
    "tsup": "^8.5.1",
    "zod": "^3.23"
  },
  "peerDependencies": {
    "typescript": "^5",
    "zod": "^3.23",
    "ai": "^4.0"
  }
}
